@model IEnumerable<CLVD6212_POE.Models.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2>Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Your cart is empty</h4>
            <p>You haven't added any products to your cart yet.</p>
            <a asp-controller="Home" asp-action="CustomerDashboard" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.Quantity</td>
                            <td>
                                <!-- Simple way to add more of the same product -->
                                <a asp-action="Add" asp-route-productId="@item.ProductId" class="btn btn-sm btn-success">+ Add More</a>
                                <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">- Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-controller="Home" asp-action="CustomerDashboard" class="btn btn-secondary">← Continue Shopping</a>
            </div>
            <div class="col-md-6 text-right">
                <form asp-action="Checkout" method="post">
                    <button type="submit" class="btn btn-success btn-lg">Proceed to Checkout →</button>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <small class="text-muted">
                Total Items: @Model.Sum(item => item.Quantity) |
                Unique Products: @Model.Count()
            </small>
        </div>
    }
</div>