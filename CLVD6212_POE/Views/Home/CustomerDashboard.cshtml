@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="mt-5">
    <h2 class="mb-2">Welcome, @User.Identity?.Name!</h2>
    <p class="text-muted">You are logged in as a <strong>Customer</strong>.</p>

    <div class="list-group mt-4">
        <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">
            <i class="fas fa-box-open me-2"></i> Browse Products
        </a>

        <a asp-controller="Order" asp-action="MyOrders" class="list-group-item list-group-item-action">
            <i class="fas fa-shopping-bag me-2"></i> Your Orders
        </a>

        <a asp-controller="Upload" asp-action="Index" class="list-group-item list-group-item-action">
            <i class="fas fa-upload me-2"></i> Upload Payment Proof
        </a>

        <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action">
            <i class="fas fa-shield-alt me-2"></i> View Privacy Policy
        </a>
    </div>
</div>