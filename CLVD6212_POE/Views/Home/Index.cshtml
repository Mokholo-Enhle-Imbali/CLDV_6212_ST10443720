@model CLVD6212_POE.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>

    .btn {
        padding: 12px 25px;
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }


</style>


<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="fas fa-star text-warning"></i> Featured Products
        </h2>

        @if (Model?.FeaturedProducts?.Any() == true)
        {
            <div class="row g-3">
                @foreach (var product in Model.FeaturedProducts.Take(8))
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 160px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 160px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }

                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title text-center mb-2">@product.ProductName</h6>
                                <p class="card-text small text-muted text-center flex-grow-1">
                                    @{
                                        var desc = product.Description ?? "";
                                        @:(desc.Length > 60 ? desc.Substring(0, 60) + "…" : desc)
                                    }
                                </p>
                                <div class="mt-auto text-center">
                                    <p class="mb-1"><strong class="text-success">@product.Price.ToString("C")</strong></p>
                                    <small class="text-muted">Stock: @product.StockAvailable</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No products available yet.
                <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
            </div>
        }
    </div>
</div>


<div class="text-center">
    <h1 class="display-4">Welcome To ABC Retailers!</h1>

    <a href="/Customer/Index" class="btn" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);"> Customers</a>

    <a href="/Product/Index" class="btn" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);"> Products</a>

    <a href="/Order/Index" class="btn" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);"> Orders</a>

    <a href="/Upload/Index" class="btn" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);"> Upload a document</a>

    <a href="/Home/ContactUs" class="btn" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);"> Contact Us</a>
  
</div>

