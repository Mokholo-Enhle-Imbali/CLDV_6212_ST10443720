@model IEnumerable<CLVD6212_POE.Models.Order>

@{
    ViewData["Title"] = ViewData["PageTitle"] ?? "My Orders";
    var isAdmin = User.IsInRole("Admin");
    var isCustomer = User.IsInRole("Customer");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-cart"></i> @ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Order
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    @if (isAdmin)
                    {
                        <th>Customer ID</th>
                    }
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            <code>
                                @if (!string.IsNullOrEmpty(order.OrderId) && order.OrderId.Length >= 8)
                                {
                                    @order.OrderId.Substring(0, 8)
                                }
                                else
                                {
                                    @order.OrderId
                                }
                            </code>
                        </td>
                        @if (isAdmin)
                        {
                            <td>@order.CustomerId</td>
                        }
                        <td>@order.ProductName</td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalPrice.ToString("C")</td>
                        <td>
                            <span class="badge bg-@(GetStatusBadgeClass(order.Status.ToString()))">
                                @order.Status
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete('@order.OrderId')" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                                else
                                {
                                    <!-- Customers can only edit their own orders if status allows -->
                                    @if (order.Status.ToString() == "Submitted" || order.Status.ToString() == "Processing")
                                    {
                                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-warning" title="Edit Order">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        @if (isAdmin)
        {
            <text>No orders found.</text>
        }
        else
        {
            <text>You haven't placed any orders yet.</text>
        }
        <a asp-action="Create" class="alert-link">Create your first order</a>!
    </div>
}

<!-- Delete Confirmation Modal -->
@if (isAdmin)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete order <strong id="orderIdDisplay"></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" asp-action="Delete" style="display: inline;">
                        <input type="hidden" id="orderIdInput" name="id" value="" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@{
    string GetStatusBadgeClass(string status) => status?.ToLower() switch
    {
        "submitted" => "primary",
        "processing" => "info",
        "completed" => "success",
        "cancelled" => "danger",
        _ => "secondary"
    };
}

@section Scripts {
    @if (isAdmin)
    {
        <script>
            function confirmDelete(orderId) {
                var displayId = orderId && orderId.length >= 8 ? orderId.substring(0, 8) + '...' : orderId;
                document.getElementById('orderIdDisplay').textContent = displayId;
                document.getElementById('orderIdInput').value = orderId;
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            }

            // Handle modal hidden event to clear the form
            document.getElementById('deleteModal').addEventListener('hidden.bs.modal', function () {
                document.getElementById('orderIdInput').value = '';
            });
        </script>
    }
}

<div class="mt-4">
        @if (isCustomer)
        {
            <a href="/Home/CustomerDashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Customer Menu
            </a>
        }
        else
        {
            <a href="/Home/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        }
    </div>