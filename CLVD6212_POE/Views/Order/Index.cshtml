@model IEnumerable<CLVD6212_POE.Models.Order>

@{
    ViewData["Title"] = "Orders (Admin)";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-cart"></i> Manage Orders</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Order
    </a>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
        {
            <div class="col">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-box me-1"></i> @order.ProductName
                            </h5>
                            <span class="badge bg-@(GetStatusBadgeClass(order.Status.ToString()))">
                                @order.Status
                            </span>
                        </div>

                        <p class="text-muted small mb-2">
                            <strong>Order ID:</strong>
                            <code>
                                @if (!string.IsNullOrEmpty(order.OrderId) && order.OrderId.Length >= 8)
                                {
                                    @order.OrderId.Substring(0, 8)
                                }
                                else
                                {
                                    @order.OrderId
                                }
                            </code>
                        </p>

                        <ul class="list-unstyled small mb-3">
                            <li><strong>Customer ID:</strong> @order.CustomerId</li>
                            <li><strong>Order Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy")</li>
                            <li><strong>Quantity:</strong> @order.Quantity</li>
                            <li><strong>Total Price:</strong> @order.TotalPrice.ToString("C")</li>
                        </ul>

                        <div class="d-flex justify-content-start mt-3">
                            <a asp-action="Details" asp-route-id="@order.OrderId"
                               class="btn btn-sm btn-outline-info me-2" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@order.OrderId"
                               class="btn btn-sm btn-outline-primary me-2" title="Edit Order">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    onclick="confirmDelete('@order.OrderId')" title="Delete Order">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-muted small">
                        <i class="fas fa-calendar-day me-1"></i>
                        @order.OrderDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No orders found.
        <a asp-action="Create" class="alert-link">Create your first order</a>!
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete order <strong id="orderIdDisplay"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="Delete" style="display: inline;">
                    <input type="hidden" id="orderIdInput" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@{
    string GetStatusBadgeClass(string status) => status?.ToLower() switch
    {
        "submitted" => "primary",
        "processing" => "info",
        "completed" => "success",
        "cancelled" => "danger",
        _ => "secondary"
    };
}

@section Scripts {
    <script>
        function confirmDelete(orderId) {
            const displayId = orderId && orderId.length >= 8 ? orderId.substring(0, 8) + '...' : orderId;
            document.getElementById('orderIdDisplay').textContent = displayId;
            document.getElementById('orderIdInput').value = orderId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('deleteModal').addEventListener('hidden.bs.modal', () => {
            document.getElementById('orderIdInput').value = '';
        });
    </script>
}

<div class="mt-4">
    <a href="/Home/AdminDashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Admin Menu
    </a>
</div>
