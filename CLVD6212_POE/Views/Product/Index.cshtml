@model IEnumerable<CLVD6212_POE.Models.Product>

@{
    ViewData["Title"] = "Products";
    bool isCustomer = User.IsInRole("Customer");
    bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Products</h2>

    <div class="mb-3">
        @if (isAdmin)
        {
            <a href="/Home/AdminDashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Admin Menu
            </a>
        }
        else if (isCustomer)
        {
            <a href="/Home/CustomerDashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Customer Menu
            </a>
        }
        else
        {
            <a href="/Home/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        }
    </div>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model)
        {
            var stock = product?.StockAvailable ?? 0;
            var badge = stock > 10 ? "success" : stock > 0 ? "warning" : "danger";
            var price = product?.Price ?? 0.0;
            var desc = product?.Description ?? "";

            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(product?.ImageUrl) ? "~/images/no-image.png" : product.ImageUrl)"
                         class="card-img-top" alt="@product?.ProductName"
                         style="height:180px;object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product?.ProductName</h5>
                        <p class="card-text text-truncate" title="@desc">@desc</p>

                        @if (price <= 0)
                        {
                            <p class="text-danger mb-1">⚠️ Price not set</p>
                        }
                        else
                        {
                            <p class="mb-1"><strong>Price:</strong> @price.ToString("C")</p>
                        }

                        <p><span class="badge bg-@badge">Stock: @stock</span></p>

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@product?.ProductId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        onclick="confirmDelete('@product?.ProductId', '@product?.ProductName')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            }

                            @if (!User.Identity!.IsAuthenticated)
                            {
                                <a asp-controller="Login" asp-action="Index" class="btn btn-sm btn-primary">
                                    <i class="fas fa-sign-in-alt"></i> Login to Add
                                </a>
                            }
                            else if (isCustomer && stock > 0)
                            {
                                <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product!.ProductId"
                                   class="btn btn-sm btn-success">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </a>
                            }
                            else if (isCustomer && stock <= 0)
                            {
                                <button class="btn btn-sm btn-secondary" disabled title="Out of Stock">
                                    <i class="fas fa-times-circle"></i> Out of Stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
        @if (isAdmin)
        {
            <a asp-action="Create" class="alert-link">Add your first product</a>
        }
    </div>
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete product <strong id="productName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById("productName").textContent = productName || "";
            var deleteUrl = "@Url.Action("Delete", "Product")";
            document.getElementById("deleteForm").action = deleteUrl + "/" + encodeURIComponent(productId || "");
            new bootstrap.Modal(document.getElementById("deleteModal")).show();
        }
    </script>
}
