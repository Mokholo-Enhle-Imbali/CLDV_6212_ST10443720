@* /Views/Login/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Access Denied";
    bool isAdmin = User.IsInRole("Admin");
    bool isCustomer = User.IsInRole("Customer");
    bool isAuthenticated = User.Identity!.IsAuthenticated;
}

<div class="container text-center mt-5">
    <h2 class="text-danger"><i class="fas fa-ban"></i> Access Denied</h2>
    <p class="lead mt-3">You do not have permission to access this page.</p>

    @if (isAdmin)
    {
        <p class="text-muted">You are logged in as an Administrator, but this resource requires different permissions.</p>
        <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-primary mt-3">
            <i class="fas fa-cog"></i> Go to Admin Menu
        </a>
    }
    else if (isCustomer)
    {
        <p class="text-muted">You are logged in as a Customer. Some features are only available to Administrators.</p>
        <a asp-controller="Home" asp-action="CustomerDashboard" class="btn btn-primary mt-3">
            <i class="fas fa-user"></i> Go to Customer Menu
        </a>
    }
    else
    {
        <p class="text-muted">If you believe this is a mistake, please contact the system administrator.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            <i class="fas fa-home"></i> Go to Home
        </a>
    }
</div>